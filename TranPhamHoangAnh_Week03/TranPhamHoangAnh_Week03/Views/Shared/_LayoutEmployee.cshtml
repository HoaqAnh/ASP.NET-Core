@using System.Security.Claims

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shop bán tranh Auh - Tranh nghệ thuật chất lượng cao</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <nav>
            <div class="nav-left">
                <img src="~/images/abstract_1.jpg" alt="logo" loading="lazy" />
                <a asp-controller="Home" asp-action="Index">Tranh Auh</a>
            </div>
            <div class="nav-center">
                <div class="search-box">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24">
                        <path fill="currentColor" d="m19.6 21l-6.3-6.3q-.75.6-1.725.95T9.5 16q-2.725 0-4.612-1.888T3 9.5t1.888-4.612T9.5 3t4.613 1.888T16 9.5q0 1.1-.35 2.075T14.7 13.3l6.3 6.3zM9.5 14q1.875 0 3.188-1.312T14 9.5t-1.312-3.187T9.5 5T6.313 6.313T5 9.5t1.313 3.188T9.5 14" />
                    </svg>
                    <input type="text" class="search-input" placeholder="Tìm kiếm sản phẩm..." />
                </div>
                <div class="nav-actions">
                    <a asp-controller="Product" asp-action="Index">Quản lý Sản phẩm</a>
                    <a href="#">Quản lý Đơn hàng</a>
                </div>
            </div>
            <div class="nav-right">
                <span class="nav-greeting mr-3">Nhân viên: @(User.FindFirstValue(ClaimTypes.GivenName))</span>
                <form asp-controller="Auth" asp-action="Logout" method="post">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-outline-danger">Đăng xuất</button>
                </form>
            </div>
        </nav>
    </header>
    <container>
        <main role="main">
            @RenderBody()
        </main>
    </container>
    <footer>
        <div class="footer-content">
            <div class="footer-section">
                <h3>Tranh Auh</h3>
                <p>Nơi mang nghệ thuật đến với không gian sống của bạn</p>
                <div class="social-icons">
