@model TranPhamHoangAnh_Week03.ViewModels.ResendOtpViewModel
@{
    Layout = null;
    ViewData["Title"] = "Gửi Lại Mã OTP";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Tranh Auh</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
    <style>
        .field-validation-error {
            color: #F44336;
            font-size: 0.875em;
            display: block;
        }

        .input-validation-error {
            border-color: #F44336 !important;
        }
    </style>
</head>
<body class="bg-gradient-to-br from-orange-50 to-red-100 min-h-screen py-8 px-4 flex justify-center items-center">
    <div class="max-w-md mx-auto w-full">
        <div class="bg-white rounded-2xl shadow-xl p-8 md:p-10">
            <div class="text-center mb-8">
                <div class="mx-auto w-16 h-16 bg-orange-100 rounded-full flex items-center justify-center mb-4">
                    <i class="fas fa-redo-alt text-orange-500 text-2xl"></i>
                </div>
                <h2 class="text-3xl font-bold text-gray-800">Gửi Lại Mã OTP</h2>
                <p class="text-gray-600 mt-2">
                    Nhập địa chỉ email đã đăng ký để chúng tôi gửi lại mã OTP.
                </p>
            </div>

            <form asp-controller="Auth" asp-action="ResendOtp" method="post" class="space-y-6" novalidate>
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm p-3 bg-red-50 rounded-md"></div>

                <div>
                    <label asp-for="Email" class="block text-sm font-semibold text-gray-700 mb-2">Địa chỉ Email</label>
                    <div class="relative">
                        <input asp-for="Email" type="email" required
                               value="@(ViewBag.Email as string ?? Model?.Email)"
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent pl-12"
                               placeholder="example@email.com">
                        <i class="fas fa-envelope absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                    </div>
                    <span asp-validation-for="Email" class="text-red-500 text-sm mt-1"></span>
                </div>

                <div class="pt-2">
                    <button type="submit"
                            class="w-full bg-gradient-to-r from-orange-500 to-red-500 text-white py-3 px-6 rounded-lg font-semibold hover:from-orange-600 hover:to-red-600 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:ring-offset-2 transform hover:scale-105 transition-all duration-200 shadow-lg">
                        Gửi Lại Mã
                    </button>
                </div>
                <div class="text-center pt-4 text-sm">
                    <a asp-action="Login" asp-controller="Auth" class="text-blue-600 hover:text-blue-700 font-semibold">Quay lại Đăng nhập</a>
                </div>
            </form>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>