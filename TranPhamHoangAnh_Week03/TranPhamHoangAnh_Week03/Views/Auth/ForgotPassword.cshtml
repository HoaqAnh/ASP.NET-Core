@model TranPhamHoangAnh_Week03.ViewModels.ForgotPasswordViewModel
@{
    Layout = null;
    ViewData["Title"] = "Quên Mật Khẩu";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
</head>
<body class="bg-gradient-to-br from-gray-100 to-gray-200 min-h-screen py-8 px-4 flex justify-center items-center">
    <div class="max-w-md mx-auto w-full">
        <div class="bg-white rounded-2xl shadow-xl p-8">
            <div class="text-center mb-8">
                <div class="mx-auto w-16 h-16 bg-yellow-100 rounded-full flex items-center justify-center mb-4">
                    <i class="fas fa-key text-yellow-500 text-2xl"></i>
                </div>
                <h2 class="text-3xl font-bold text-gray-800">Quên Mật Khẩu?</h2>
                <p class="text-gray-600 mt-2">Đừng lo lắng! Nhập email của bạn và chúng tôi sẽ gửi cho bạn một link để đặt lại mật khẩu.</p>
            </div>

            @if (ViewBag.SuccessMessage != null)
            {
                <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-6" role="alert">
                    <p class="font-bold">Thành công</p>
                    <p>@ViewBag.SuccessMessage</p>
                </div>
            }
            else
            {
                <form asp-action="ForgotPassword" asp-controller="Auth" method="post" class="space-y-6">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm"></div>
                    <div>
                        <label asp-for="Email" class="block text-sm font-semibold text-gray-700 mb-2"></label>
                        <div class="relative">
                            <input asp-for="Email" class="w-full px-4 py-3 border border-gray-300 rounded-lg pl-12" placeholder="Nhập email đã đăng ký của bạn" autofocus />
                            <i class="fas fa-envelope absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                        </div>
                        <span asp-validation-for="Email" class="text-red-500 text-sm mt-1"></span>
                    </div>
                    <div class="pt-2">
                        <button type="submit" class="w-full bg-gradient-to-r from-yellow-500 to-orange-500 text-white py-3 px-6 rounded-lg font-semibold hover:from-yellow-600 hover:to-orange-600 shadow-lg">
                            Gửi Link Đặt Lại Mật Khẩu
                        </button>
                    </div>
                </form>
            }

            <div class="text-center pt-4 mt-4 border-t border-gray-200">
                <a asp-controller="Auth" asp-action="Login" class="text-blue-600 hover:text-blue-700 font-semibold">
                    <i class="fas fa-arrow-left mr-1"></i> Quay lại trang Đăng nhập
                </a>
            </div>
        </div>
    </div>
</body>
</html>