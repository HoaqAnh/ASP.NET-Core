@model TranPhamHoangAnh_Week03.ViewModels.ResetPasswordViewModel
@{
    Layout = null;
    ViewData["Title"] = "Đặt Lại Mật Khẩu";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
</head>
<body class="bg-gradient-to-br from-blue-50 to-indigo-100 min-h-screen py-8 px-4 flex justify-center items-center">
    <div class="max-w-md mx-auto w-full">
        <div class="bg-white rounded-2xl shadow-xl p-8">
            <div class="text-center mb-8">
                <h2 class="text-3xl font-bold text-gray-800">Đặt Lại Mật Khẩu</h2>
                <p class="text-gray-600 mt-2">Vui lòng nhập mật khẩu mới của bạn.</p>
            </div>

            <form asp-action="ResetPassword" asp-controller="Auth" method="post" class="space-y-6">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Token" />
                <input type="hidden" asp-for="Email" />

                <div asp-validation-summary="All" class="text-red-500 text-sm bg-red-50 p-3 rounded-md"></div>

                <div>
                    <label asp-for="NewPassword" class="block text-sm font-semibold text-gray-700 mb-2"></label>
                    <div class="relative">
                        <input asp-for="NewPassword" type="password" class="w-full px-4 py-3 border border-gray-300 rounded-lg pl-12" placeholder="Nhập mật khẩu mới" autofocus />
                        <i class="fas fa-lock absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                    </div>
                    @* Bạn có thể thêm JS kiểm tra độ mạnh mật khẩu ở đây *@
                    <span asp-validation-for="NewPassword" class="text-red-500 text-sm mt-1"></span>
                </div>

                <div>
                    <label asp-for="ConfirmPassword" class="block text-sm font-semibold text-gray-700 mb-2"></label>
                    <div class="relative">
                        <input asp-for="ConfirmPassword" type="password" class="w-full px-4 py-3 border border-gray-300 rounded-lg pl-12" placeholder="Xác nhận mật khẩu mới" />
                        <i class="fas fa-lock absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-red-500 text-sm mt-1"></span>
                </div>

                <div class="pt-2">
                    <button type="submit" class="w-full bg-gradient-to-r from-blue-600 to-indigo-600 text-white py-3 px-6 rounded-lg font-semibold shadow-lg">
                        Đặt Lại Mật Khẩu
                    </button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>